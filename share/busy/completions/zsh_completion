#/usr/bin/env zsh

	sargparse_GetOpts () {
		words=(${(q)words[@]:0:$CURRENT} --bash_completion)
		completions=("${(@f)$(eval $words)}")
		if [ "${completions[1]}" = " -d " ]; then
			_files -/
		elif [ "${completions[1]}" = " -f " ]; then
			_files
		elif [[ "${completions[1]}" =~ " -f " ]]; then
			parts=(${completions[1]})
			_files -g "*${parts[2]}"
			compadd -- ${completions[2,-1]}
		else
			compadd -- ${completions[@]}
		fi
	}
	compdef sargparse_GetOpts -P busy -N
